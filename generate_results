#!/bin/bash


if [ $# -ne 2 ]
    then
        echo "./generate_results TOPOLOGY REPLAYNAME"
        exit 0
    fi

if [ ! -d results/loadbalancer/$2 ]
    then
        mkdir results/loadbalancer/$2
    else
        rm results/loadbalancer/$2/*
    fi
sudo mn -c
sudo ./openflix.py -v -o $1 -p replay/o$1/$2 -c loadbalancer
cp /tmp/* results/loadbalancer/$2/

if [ ! -d results/openflixlb/$2 ]
    then
        mkdir results/openflixlb/$2
    else
        rm results/openflixlb/$2/*
    fi
sudo mn -c
sudo ./openflix.py -v -o $1 -p replay/o$1/$2 -c openflixlb
cp /tmp/* results/openflixlb/$2/

